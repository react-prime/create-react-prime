{
  "compilerOptions": {
      "noEmit": true,
      "target": "es6",
      "module": "commonjs",
      "lib": ["esnext"],
      "removeComments": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "baseUrl": "src",
      "paths": {
          "ioc": ["ioc/container"],
          "ioc/*": ["ioc/*"],
          "installers/*": ["installers/*"],
          "types": ["types/index"],
          "types/*": ["types/*"],
          "src/*": ["./*"]
      }
  },
  "include": ["./src", "./__tests__"],
  "exclude": ["node_modules"]
}
