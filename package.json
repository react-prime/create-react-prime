{
  "name": "create-react-prime",
  "version": "1.3.2",
  "description": "Installs the latest version of React-Prime boilerplate.",
  "author": "Sander Vispoel <contact@sandervispoel.com>",
  "license": "MIT",
  "main": "src/index.js",
  "bin": {
    "create-react-prime": "./src/index.js"
  },
  "scripts": {
    "lint": "eslint --ext .ts --ext .tsx src/",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist/",
    "start": "node dist/src/main.js",
    "build": "npm run clean && tsc",
    "dev": "rm -rf testingname/ testing-name/; npm run build; node dist/src/main.js testing-name",
    "test": "mocha",
    "test:full": "npm run lint; npm run typecheck; mocha",
    "prepublishOnly": "npm run lint && npm run test",
    "pub:patch": "npm version patch && npm publish",
    "pub:minor": "npm version minor && npm publish",
    "pub:major": "npm version major && npm publish"
  },
  "dependencies": {
    "commander": "5.1.0",
    "inversify": "5.0.1",
    "inversify-inject-decorators": "3.1.0",
    "ora": "4.0.4",
    "reflect-metadata": "0.1.13"
  },
  "devDependencies": {
    "@types/node": "14.0.13",
    "@typescript-eslint/eslint-plugin": "3.2.0",
    "@typescript-eslint/parser": "3.2.0",
    "eslint": "7.2.0",
    "eslint-plugin-import": "2.21.2",
    "mocha": "8.0.1",
    "typescript": "3.9.5",
    "typescript-eslint-parser": "22.0.0"
  },
  "keywords": [
    "boilerplate",
    "install",
    "react"
  ]
}
