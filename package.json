{
  "name": "create-react-prime",
  "version": "4.0.0-beta.15",
  "description": "Code for the create-react-prime CLI",
  "author": "Label A [labela.nl]",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "rm -rf dist && tsup",
    "start": "node dist/index.js",
    "dev": "rm -rf react-web/ react-mobile/ reactMobile/ prime-monorepo/ && NODE_ENV=development tsup",
    "postdev": "node dist/index.js -d",
    "lint": "eslint --ext .ts ./lib ./src",
    "typecheck": "tsc --project tsconfig.tc.json",
    "test:run": "vitest --run",
    "test:cov": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test": "npm run lint && npm run typecheck && npm run test:run",
    "prepublishOnly": "npm run test && npm run build",
    "pub:patch": "npm version patch && npm publish && git push",
    "pub:minor": "npm version minor && npm publish && git push",
    "pub:major": "npm version major && npm publish && git push",
    "cs:add": "npx changeset",
    "cs:ver": "npx changeset version",
    "prepare": "husky install"
  },
  "main": "dist/index.js",
  "bin": {
    "create-react-prime": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "boilerplate",
    "install",
    "cli",
    "react",
    "react-native",
    "nextjs",
    "react-prime"
  ],
  "dependencies": {
    "camelcase": "6.3.0",
    "commander": "9.0.0",
    "git-user-name": "^2.0.0",
    "got": "^12.0.1",
    "immer": "9.0.12",
    "inquirer": "8.2.1",
    "kleur": "4.1.4",
    "lowdb": "^3.0.0",
    "open": "^8.4.0",
    "ora": "^6.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.21.1",
    "@types/git-user-name": "^2.0.1",
    "@types/inquirer": "8.2.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "c8": "^7.11.0",
    "eslint": "8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.5",
    "prettier": "^2.5.1",
    "tempy": "^2.0.0",
    "tsup": "^5.12.0",
    "type-fest": "2.12.0",
    "typescript": "^4.6.2",
    "typescript-eslint-parser": "22.0.0",
    "vite": "^2.8.6",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "0.6.0"
  }
}
