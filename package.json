{
  "name": "create-react-prime",
  "version": "4.0.0-beta.1",
  "description": "Code for the create-react-prime CLI",
  "author": "Label A [labela.nl]",
  "license": "MIT",
  "type": "module",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "npm run build:scripts && NODE_ENV=production node esbuild.app.config.js",
    "build:scripts": "node esbuild.scripts.config.js",
    "start": "node dist/main.js",
    "dev": "rm -rf react-web/ react-mobile/ reactmobile/ && npm run build:scripts && NODE_ENV=development node esbuild.app.config.js",
    "lint": "eslint --ext .ts lib/ src/",
    "typecheck": "tsc --noEmit",
    "test:run": "vitest --run",
    "test:cov": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test": "npm run lint && npm run typecheck && npm run test:run",
    "prepublishOnly": "npm run test && npm run build",
    "pub:patch": "npm version patch && npm publish && git push",
    "pub:minor": "npm version minor && npm publish && git push",
    "pub:major": "npm version major && npm publish && git push",
    "cs:add": "npx changeset",
    "cs:ver": "npx changeset version",
    "prepare": "husky install",
    "db:migrate": "npx prisma db push"
  },
  "main": "dist/main.js",
  "bin": {
    "create-react-prime": "dist/main.js"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "boilerplate",
    "install",
    "cli",
    "react",
    "react-native",
    "nextjs",
    "react-prime"
  ],
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "camelcase": "6.3.0",
    "commander": "9.0.0",
    "git-user-name": "^2.0.0",
    "immer": "9.0.12",
    "inquirer": "8.2.0",
    "kleur": "4.1.4",
    "lowdb": "^3.0.0",
    "ora": "^6.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "2.21.0",
    "@types/git-user-name": "^2.0.1",
    "@types/inquirer": "8.2.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "5.13.0",
    "@typescript-eslint/parser": "5.13.0",
    "c8": "^7.11.0",
    "esbuild": "0.14.23",
    "esbuild-runner": "2.2.1",
    "eslint": "8.10.0",
    "eslint-plugin-import": "2.25.4",
    "husky": "^7.0.4",
    "prisma": "^3.10.0",
    "tempy": "^2.0.0",
    "type-fest": "2.12.0",
    "typescript": "^4.6.2",
    "typescript-eslint-parser": "22.0.0",
    "vite": "^2.8.6",
    "vite-tsconfig-paths": "^3.4.1",
    "vitest": "0.5.9"
  }
}
